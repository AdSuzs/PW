<div id="create" class="container mt-4">
    <div class="row">
      <div class="col-sm">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Cursos</li>
            <li class="breadcrumb-item active" aria-current="page">Criar Curso</li>
          </ol>
        </nav>
      </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <form action = "/curso" method="post">
                <div class="form-group">
                  <label for="nome-do-curso">Nome do Curso</label>
                  <input type="text" id="nome-do-curso" class="form-control" placeholder="Ciência da Computação">
                </div>
                <div class="form-group">
                    <label for="sigla">Sigla do Curso</label>
                    <input type="text" id="sigla" class="form-control" placeholder="IE01">
                </div>
                <div class="form-group">
                  <label for="descricao">Descrição</label>
                  <textarea class="form-control" id="descricao" rows="3"></textarea>
                </div>
            </form>
            <input type="hidden" name="_csrf" value="<%= _csrf %>">
            <input type="submit" class="btn btn-success" value="Salvar">
        </div>
    </div>    
  </div>