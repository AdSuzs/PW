<div id='selecionar-curso'>
        <div class="container mt-4">
            <div class="row">
                <h1>Selecionar Curso</h1>
            </div>
            <hr />
            <div class="row">
                <p>Por favor, selecione seu curso na UFAM:</p>
            </div>
            <div class="row">
                <form action="/account/curso" method="post">
                    <div class="form-group">
                        <select class="custom-select" name="select">
                            <% cursos.forEach((course)=> {%>
                                <option><%= course.nome %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="form-group">
                        <a href="/account" class="btn btn-outline-info">Cancelar</a>
                        <input type="submit" class="btn btn-dark" value="Salvar">
                    </div>
                    <input type="hidden" name="_csrf" value="<%= _csrf%>">
                </form>
            </div>
        </div>
    </div>